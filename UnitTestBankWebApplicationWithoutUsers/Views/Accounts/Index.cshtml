@model IEnumerable<UnitTestBankWebApplicationWithoutUsers.Models.Account>

@{
    ViewBag.Title = "Accounts";
}

<div class="panel panel-default">
    <div class="panel-heading">
        @Html.ActionLink("Create New", "Create", null, new { @class = "btn btn-default pull-right" })
        <h2>Accounts</h2>
    </div>
    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.State)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Balance)
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.State)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Balance)
                </td>
                <td>
                    @Html.ActionLink("Details", "Details", new { id = item.Id }, new { @class = "btn btn-default pull-right" })
                </td>
            </tr>
        }

    </table>

</div>
